@model MvcMovie.Models.Car 


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Make</label>
                <select asp-for="MakeId" class="form-control">
                    <option disabled selected>Select Make</option>
                    @foreach (var item in Model.Makes)
                    {
                        <option value="@item.id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Model</label>
                <select asp-for="ModelId" class="form-control">
                    <option disabled selected>Select Model</option>
                    @foreach (var item in Model.Models)
                    {
                        <option value="@item.id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Type</label>
                <select asp-for="CarTypeId" class="form-control">
                    <option disabled selected>Select Type</option>
                    @foreach (var item in Model.CarTypes)
                    {
                        <option value="@item.id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Coast</label>
                <input name="Cost" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
